@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<section id="">
	<!--form-->
    <div class="container vh-100 d-flex justify-content-center align-items-center">
        <div class="row w-100">
            <div class="col-md-6 col-sm-8 mx-auto">
                <div class="login-form text-center p-4 border rounded shadow">
                    <h2>Login to your account</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form asp-action="Login" asp-controller="Account">
                        <div class="form-group text-start">
                            <label>Username</label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group text-start">
                            <label>Password</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button class="btn btn-warning w-100">Login</button>
                        <div class="mt-3">
                            <a asp-action="LoginByGoogle" asp-controller="Account">Đăng nhập bằng Google</a> <br />
                            <a asp-action="Create" asp-controller="Account">Tạo tài khoản mới?</a> <br />
                            <a asp-action="ForgetPass" asp-controller="Account">Quên mật khẩu?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
