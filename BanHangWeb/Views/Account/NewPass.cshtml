@model AppUserModel
@{
	ViewData["Title"] = "Lấy mật khẩu mới";
}
<section id="">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>Lấy mật khẩu mới</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="UpdateNewPassWord" asp-controller="Account">
						<input type="hidden" name="token" value="@ViewBag.Token"/>
						<div class="form-group">
							<label>Email</label>
							<input asp-for="Email" readonly value="@ViewBag.Email" class="form-control" />
							<span asp-validation-for="Email" class="text-danger" />
						</div>
						<div class="form-group">
							<label>Password</label>
							<input asp-for="PasswordHash" class="form-control" />
							<span asp-validation-for="PasswordHash" class="text-danger" />
						</div>

						<button class="btn btn-default">Đổi mật khẩu</button>
						<a asp-action="Create" asp-controller="Account">Tạo tài khoản mới?</a> <br />

					</form>
				</div><!--/login form-->
			</div>

		</div>
	</div>
	</div>
</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
