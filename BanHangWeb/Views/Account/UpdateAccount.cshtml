@model AppUserModel
@{
	ViewData["Title"] = "Cập Nhật Tài Khoản";
}
<section id="">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-1">
				<div class="signup-form">
					<!--sign up form-->
					<h2>Cập nhật tài khoản</h2>
					<input type="hidden" asp-for="Id"/>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form autocomplete="off" asp-action="UpdateInfoAccount" asp-controller="Account" method="post">

						<div class="form-group">
							<label>Username</label>
							<input asp-for="UserName" readonly required class="form-control" />
							<span asp-validation-for="UserName" class="text-danger" />
						</div>

						<div class="form-group">
							<label>Email</label>
							<input asp-for="Email" readonly required class="form-control" />
							<span asp-validation-for="Email" class="text-danger" />
						</div>

						<div class="form-group">
							<label>Phone Number</label>
							<input asp-for="PhoneNumber" class="form-control" />
							<span asp-validation-for="PhoneNumber" class="text-danger" />
						</div>
						<div class="form-group">
							<label>Old Password</label>
							<input type="text" readonly value="@Model.PasswordHash" class="form-control" />
						</div>

						<div class="form-group">
							<label>New Password</label>
							<input type="text" name="PasswordHash" required class="form-control" />
							<span asp-validation-for="PasswordHash" class="text-danger"></span>
						</div>


						<button class="btn btn-default">Cập nhật</button>
					</form>
				</div><!--/sign up form-->
			</div>

		</div>
	</div>
</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
